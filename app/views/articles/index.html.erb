<%= paginate @articles %>
<div id="articles">
</div>


<% @articles.each do |article| %>

<div class="col-xs-12 col-sm-8">
   <div class="row-fluid">
           <div class="thumbnails">
             <div class="span3">

               <div class="thumbnail">
                 <div class="caption">
                  <h3><%= article.title %></h3>
                   <%= article.content.truncate(100) %>
                   <%= link_to 'read more', article_path(article.id) %>
                   <h4>status : <%= article.status %></h4>
                   <p><%= link_to 'edit', edit_article_path(article.id), :class => "btn btn-primary" %>  | <%= link_to 'delete', article_path(article.id), :class => "btn btn-danger", method: "DELETE", data: {confirm: 'Delete this data ? '} %></p>
                 </div>
               </div>
             </div>
             </div>
     </div>
     </div>

<% end %>
<hr>
<div class="col-xs-12 col-sm-12">
<div class="footer">
<p>
  Download:
  <%= link_to "CSV", articles_path(format: "csv") %> |
  <%= link_to "Excel", articles_path(format: "xls") %>
</p>
</div>
</div>
